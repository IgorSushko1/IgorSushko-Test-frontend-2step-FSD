extends base-page.pug
block meta-keywords
	meta(name="keywords" content="search room")
block meta-description
	meta(name="description" content="Выбор номера в отеле, любой")
block title
	title Search page
block main
	include ../blocks/01-elements/checkbox/checkbox-radio.pug
	include ../blocks/01-elements/checkbox/checkbox-toggle.pug
	include ../blocks/01-elements/text-field/text-field_calendar copy.pug
	include ../blocks/01-elements/dropdown/dropdown-subparagraph.pug
	include ../blocks/01-elements/range-slider/range-slider.pug
	include ../blocks/01-elements/checkbox-rich-buttons/rich-checkbox-button.pug
	include ../blocks/01-elements/checkbox/checkbox-expendable.pug
	include ../blocks/01-elements/checkbox/checkbox-buttons.pug
	include ../blocks/hotel-room-card/hotel-room-card.pug
	include ../blocks/01-elements/rate-button/rate-button.pug
	include ../blocks/01-elements/pagination/pagination.pug
	.search-page__main
		article.search-page__main_card
			.search-page__main_card_title-datepicker
				h3 Даты пребывания в отеле
			+calendar-hidden("search-page__main_card_calendar")
			.search-page__main_card_block
				.search-page__main_card_title-datepicker
					h3 Гости
				+dropdown-people
			+range-slider
			.search-page__main_card_title_check-box
				h3 checkbox buttons
			+checkbox-button_simple("Можно курить", "")
			+checkbox-button_simple("Можно с питомцами", "checked")
			+checkbox-button_simple("Можно пригласить гостей (до 10 человек)", "checked")
			.search-page__main_card_title_check-box-rich
				h3 доступность
			+checkbox-rich
			.search-page__main_card_block
				.search-page__main_card_title_comfortable
					h3 Удобства номера
				+dropdown-room-comfort
			.search-page__main_card_expendable-checkbox-list
				+checkbox-expendable("дополнительные удобства")
		article.search-page__main_rooms-choose
			h2 Номера, которые мы для вас подобрали
			.search-page__main_room-pick-up
