mixin sign-in
	.sing-in-card
		.sing-in-card-title
			h2 Войти
		div.sing-in-card-1
			+form-name("email","Email", "email-sign-in", "sing-in-card-form")
		div.sing-in-card-2
			+form-name("text","Пароль", "password-sign-in", "sing-in-card-form")
		.sing-in-card-button
				+button-fill-arrow("Войти")
		.sing-in-card-sing-up
			p Уже есть аккаунт на Toxin?
			+button-pill_empty("Войти")