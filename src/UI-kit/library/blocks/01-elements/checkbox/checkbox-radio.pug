mixin radio-buttons(radioButtonClass)
	form(action="" class=radioButtonClass)
		label.checkbox-radio_container Мужчина
			input(type="radio" name="sex" value="this is a men's world" checked)
			span.checkbox-radio_checkmark
			span.checkbox-radio_checkmark-white
		label.checkbox-radio_container Женщина
			input(type="radio" name="sex" value="but it would be nothing? without woman or a girl")
			span.checkbox-radio_checkmark
			span.checkbox-radio_checkmark-white