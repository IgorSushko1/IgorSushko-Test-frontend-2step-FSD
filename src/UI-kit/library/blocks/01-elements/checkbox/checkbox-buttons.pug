mixin checkbox-button_simple(text, doesItChecked)
	label.checkbox-buttons_container= text
		if (doesItChecked == "checked")
			input(type="checkbox" checked)
		else
			input(type="checkbox")
		span.checkbox-buttons_checkmark
		span.checkbox-buttons_checkmark-white

