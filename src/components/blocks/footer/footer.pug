include ../../elements/form__email/form__email.pug
include ../../elements/footer__links/footer__links.pug

mixin footer
  .footer__menu
    .footer__logo
      a(href="./landing.html")
        img(src="imgs/Logo.png" alt="" )
      .footer__logo_text Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»
    nav.footer__navigation
      +footer__links("Навигация", "О нас", "Новости", "Служба поддержки", "Услуги")
    nav.footer__about
      +footer__links("О нас", "О сервисе", "Наша команда", "Вакансии", "Инвесторы")
    nav.footer__support
      +footer__links("Служба поддержки", "Соглашения", "Сообщества", "Связь с нами")
    nav.footer__subscription
      h3.footer__h3 Подписка
      .footer__subscription_text Получайте специальные предложения и новости сервиса
      +form__email("email", "Your email adress")
  aside.footer__social
    .footer__copyright Copyright © 2019 Toxin отель. Все права зачищены.
    .footer__icons
      img(src="imgs/icon-twitter.png" alt="")
      img(src="imgs/icon-facebook.png" alt="")
      img(src="imgs/icon-instagram.png" alt="")