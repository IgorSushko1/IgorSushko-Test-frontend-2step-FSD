include ../../elements/button-pill_full_arrow/button-pill_full-with-arrow.pug
include ../../elements/dropdown/dropdown-subparagraph.pug

mixin pick-up-numbers
	.pick-up-numbers-card
		.pick-up-numbers-card-title
			h2 Найдём номера под ваши пожелания
		.pick-up-numbers-card-arrival
			h3 Прибытие - выезд
			label.pick-up-numbers-card-input
				input(type="checkbox" id="datepicker"  data-range="true" data-multiple-dates-separator=" - " clearButton="true" class="datepicker-here pick-up-numbers-card-arrival-wid" data-position="bottom left")
				p(class="result-datepicker-first-date")
					span.pick-up-numbers-card-date-for-two-inputs ДД.ММ.ГГГГ
					span.material-icons.pick-up-numbers-card-icon-for-date expand_more
				p(class="result-datepicker-second-date")
					span.pick-up-numbers-card-date-for-two-inputs ДД.ММ.ГГГГ
					span.material-icons.pick-up-numbers-card-icon-for-date expand_more
		div.pick-up-numbers-card-quests
			h3 Гости
			.pick-up-dropdown
				+dropdown-people
		.pick-up-numbers-card-button
			+button-fill-arrow("подобрать номер")
