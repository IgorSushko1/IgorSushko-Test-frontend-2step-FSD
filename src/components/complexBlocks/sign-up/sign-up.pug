include ../../blocks/button-pill__empty_short/button-pill__empty_short.pug
include ../../blocks/button-pill__full_arrow/button-pill__full_arrow.pug
include ../../blocks/checkbox-radio/checkbox-radio.pug
include ../../blocks/checkbox-toggle/checkbox-toggle.pug
include ../../blocks/form__name/form__name.pug
include ../../blocks/calendar/calendar.pug
mixin sign-up
  article.sing-up
    header.sing-up__title
      h2 Регистрация аккаунта
    .sing-up__name
      +form__name("text","Имя", "name", "sign-up")
    .sing-up__surname
      +form__name("text","Фамилия", "surname", "sign-up")
    .sing-up__gender
      +checkbox-radio(["Мужчина","Женщина"])
    .sing-up__birthday
      h3.sing-up__birthday_title Дата рождения
      +calendar("ДД.ММ.ГГГГ", "", "datepicker-single", "birthday")
    .sing-up__enter
      h3.sing-up__enter_title данные для входа в сервис
      .sing-up__registration
        +form__name("email","Email", "email", "sign-up")
      .sing-up__registration
        +form__name("text", "Пароль", "password", "sign-up")
    .sing-up__toggle-checkbox
      +checkbox-toggle("Получать спецпредложения")
    .sing-up__button
      +button-pill__full_arrow("Перейти к оплате", "./search.html")
    .sing-up__authorization
      p.sing-up__authorization_text Уже есть аккаунт на Toxin
      +button-pill__empty_short({text: "Войти", ref:"./registration-sign-in.html"})
