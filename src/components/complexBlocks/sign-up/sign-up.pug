include ../../blocks/button/button.pug
include ../../blocks/checkbox-radio/checkbox-radio.pug
include ../../blocks/checkbox-toggle/checkbox-toggle.pug
include ../../blocks/form-for-text/form-for-text.pug
include ../../blocks/calendar/calendar.pug

mixin sign-up
  article.sing-up
    header.sign-up__header
      h2.sing-up__title Регистрация аккаунта
    form(action="./search.html").sign-up__form
      .sing-up__name
        +form-for-text("text","Имя", "name", "sign-up")
      .sing-up__surname
        +form-for-text("text","Фамилия", "surname", "sign-up")
      .sing-up__gender
        +checkbox-radio(["Мужчина","Женщина"])
      .sing-up__birthday
        h3.sing-up__birthday_title Дата рождения
        +calendar("ДД.ММ.ГГГГ", "", "datepicker-single", "birthday")
      .sing-up__enter
        h3.sing-up__enter_title данные для входа в сервис
      .sing-up__registration
        +form-for-text("email","Email", "email", "sign-up")
      .sing-up__registration
        +form-for-text("text", "Пароль", "password", "sign-up")
      .sing-up__toggle-checkbox
        +checkbox-toggle("Получать спецпредложения")
      .sing-up__button
        +button({
          text: "Перейти к оплате",
          arrow: "enable",
          color: "purple"
          })
    .sing-up__authorization
      p.sing-up__authorization_text Уже есть аккаунт на Toxin
      form(action="./registration-sign-in.html").sing-up__button-white
        +button({
          text: "Войти",
          arrow: "disable",
          color: "white"
        })
