include ../../blocks/button/button.pug

mixin header(buttonTextOne, buttonTextTwo, login)
  - var links = [{types:"simple", link:"", text:"О нас"},{types:"arrow", link:"", text:"Услуги"},{types:"simple", link:"", text:"Вакансии"},{types:"simple", link:"", text:"Новости"},{types:"arrow", link:"", text:"Соглашения"}]

  .header
    a(href="./landing.html").header__image
      img(src="imgs/logo.png" alt="Toxin label" )
    nav.header__menu
      ul.header__list
        each i in links
          if i.types == "simple"
            li.header__point
              a(href=i.link).header__link= i.text
          else if i.types == "bold"
            li.header__point
              a(href=i.link).header__link_bold= i.text
          else if i.types=="arrow"
            li.header__point
              .header__dropdown
                a.header__link= i.text
                span.material-icons.header__icon keyboard_arrow_down
      if (login)
        .header__login_in Cosmin Negoita
      else
        form(action="./registration-sign-in.html").header__login
          +button({
            text: buttonTextOne,
            color: "white",
            arrow: "disable"
            })
        form(action="./registration-sign-up.html").header__register
          +button({
            text: buttonTextTwo,
            color: "purple",
            arrow: "disable"
            })
