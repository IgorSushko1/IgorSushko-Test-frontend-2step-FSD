doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible" content="ie=edge")
    title My app

  body
    div
      include ./components/blocks/fonts-list/fonts-list.pug
      +fonts-list

    include ./components/blocks/color-example/color-example.pug

    +color-example("Dark Shade 100%", "#1F2041", "__dark-shade-100")
    +color-example("Dark Shade 75%", "#1F2041", "__dark-shade-075")
    +color-example("Dark Shade 50%", "#1F2041", "__dark-shade-050")
    +color-example("Dark Shade 25%", "#1F2041", "__dark-shade-025")
    +color-example("Dark Shade 5%", "#1F2041", "__dark-shade-005")
    +color-example("Purple", "#BC9CFF", "__purple")
    +color-example("Green", "#6FCF97", "__green")

    include ./components/blocks/form__email/form__email.pug
    +form__email("email", "Your email adress", "field name")
    include ./components/blocks/form__date/form__date.pug
    +form__date("date", "masked text field")
    include ./components/blocks/form__name/form__name.pug
    +form__name("email","Email", "email-sign-in", "sign-in")
    +form__name("email","Email", "email-sign-up", "sign-up")
    div
      include ./components/blocks/iqdropdown/iqdropdown.pug
      +iqdropdown({arr:["Взрослые", "Дети", "Младенцы"], classForJs:"js-iqdropdown_people"})
      +iqdropdown({arr:["Спальни", "Кровати", "Ванные комнаты"], classForJs:"js-iqdropdown_options"})
    div
      include ./components/blocks/checkbox-toggle/checkbox-toggle.pug
      +checkbox-toggle("Получать спецпредложения")
    div
      include ./components/blocks/checkbox-button/checkbox-button.pug
      +checkbox-button("Можно курить", "")
      +checkbox-button("Можно с питомцами", checked)
      +checkbox-button("Можно пригласить гостей (до 10 человек)", checked)
    div
      include ./components/blocks/checkbox-radio/checkbox-radio.pug
      +checkbox-radio(["Мужчина","Женщина"])
    div
      include ./components/blocks/star-rating/star-rating.pug
      +star-rating(3)
      +star-rating(1)
      +star-rating(2)
      +star-rating(5)
    div
    include ./components/blocks/button/button.pug
      form(action="landing.html")
        +button({
          text: "Универсальная кнопка длинная",
          arrow: "enable",
          color: "purple"
        })
      +button({
        text: "Универсальная кнопка длинная",
        arrow: "disable",
        color: "white"
      })
      +button({
        text: "REGISTER",
        arrow: "disable",
        color: "purple"
      })
      +button({
        text: "text",
        arrow: "disable",
        color: "white"
      })
      +button({
        text: "CLICK ME",
        arrow: "enable",
        color: "purple"
      })
    div
      include ./components/blocks/like-button/like-button.pug
      +like-button({value: 11})
    div
      include ./components/blocks/calendar/calendar.pug
      +calendar("19.08.2019", "23.08.2019", "#datepicker", "duble")
    div
      include ./components/blocks/range-slider/range-slider.pug
      +range-slider
    div
      include ./components/blocks/checkbox-expendable/checkbox-expendable.pug
      +checkbox-expendable({title: "Дополнительные удобства", textsAndChecked: {
        "Завтрак": "checked",
        "Письменный стол": "checked",
        "Стул для кормления": "unchecked",
        "Кроватка": "unchecked"
      }})
    div
      include ./components/blocks/pagination/pagination.pug
      +pagination
    div
      include ./components/blocks/checkbox-rich/checkbox-rich.pug
      +checkbox-rich({titlesAndChecked: {
        "Широкий коридор": unchecked,
        "Помощник для инвалидов": unchecked
      }, texts: ["Ширина коридоров в номере не менее 91см",
      "На 1 этаже вас встретит специалист и проводит до номера"
      ]})
    div
      include ./components/blocks/bullet-list/bullet-list.pug
      +bullet-list("bullet list", "grey" ,"Нельзя с питомцами", "Без вечеринок и мероприятий", "Время прибытия — после 13:00, выезд до 12:00")
    div
      include ./components/blocks/icon-advantages/icon-advantages.pug
      +icon-advantages([
        {
          img: "imgs/insert_emoticon.svg",
          alt: "icon smile",
          size: 40,
          title: "Комфорт",
          text: "Шумопоглащающие стены"
        },
        {
          img: "imgs/location_city.svg",
          alt: "icon building",
          size: 40,
          title: "Удобство",
          text: "Окно в каждой из спален"
        },
        {
          img: "imgs/whatshot.svg",
          alt: "icon flame",
          size: 40,
          title: "Уют",
          text: "Номер оснащен камином",
          borderStyle: "__without-border"
        }])
    div
      include ./components/blocks/comments/comments.pug
      +comments("imgs/murad-true.png", "Мурад Сарафанов", "5 дней назад", "12", "checked", "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.")
      +comments("imgs/girl image.png", "Патрисия Стёклышкова", "Неделю назад", "2", "", "Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент")
    div
      include ./components/complexBlocks/header/header.pug
      +header
    div
      include ./components/complexBlocks/header/header__login.pug
      +header__login
    div
      include ./components/complexBlocks/footer/footer.pug
      +footer
    div
      include ./components/complexBlocks/footer-mobile/footer-mobile.pug
      +footer-mobile
    div
      include ./components/complexBlocks/pick-up-numbers/pick-up-numbers.pug
      +pick-up-numbers
    div
      include ./components/complexBlocks/sign-up/sign-up.pug
      +sign-up
    div
      include ./components/complexBlocks/sign-in/sign-in.pug
      +sign-in
    div
      include ./components/complexBlocks/booking/booking.pug
      +booking-room
    div
      include ./components/complexBlocks/hotel-room-card/hotel-room-card.pug
      +hotel-room-card("./assets/images/room-2.png", "4", "888", "9900₽", "not lux")
      +hotel-room-card("./assets/images/room-1.png", "5", "840", "9990₽", "lux")
    div
      include ./components/complexBlocks/impressions/impressions.pug
      +impressions({title: "Впечатления от номера", voiceNumber: 300, bulletListBuild:[
        {color:"linear-gradient(0deg, #FFBA9C, #FFE39C)", impression: "Великолепно", margin: "-0.85rem"},
        {color:"linear-gradient(0deg, #66D2EA, #6FCF97)", impression: "Хорошо", margin: "-0.85rem"},
        {color:"linear-gradient(0deg, #8BA4F9, #BC9CFF)", impression: "Удовлетворительно", margin: "-0.9rem"},
        {color:"linear-gradient(0deg, rgba(61, 73, 117, 1), rgba(144, 144, 144, 1))", impression: "Разочарован"},
        ]
      })