include ../../components/blocks/header/header.pug
include ../../components/blocks/footer/footer.pug

doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible" content="ie=edge")
    block meta-keywords
    block meta-description
    block page-name
  body.registration
    header.registration__header
      +header("ВОЙТИ", "ЗАРЕГИСТРИРОВАТЬСЯ")
    main.registration__basis
      article.registration___basis_image
        block registration-image
      article.registration__basis_sign-up
        block sing-up
      article.registration__basis_sign-in
        block sing-in
    footer.registration__footer
      +footer