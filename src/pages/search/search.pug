extends ../basis/basis.pug

include ../../components/blocks/iqdropdown/iqdropdown.pug

include ../../components/complexBlocks/hotel-room-card/hotel-room-card.pug

include ../../components/blocks/range-slider/range-slider.pug
include ../../components/blocks/calendar/calendar.pug
include ../../components/blocks/checkbox-rich/checkbox-rich.pug
include ../../components/blocks/checkbox-expendable/checkbox-expendable.pug
include ../../components/blocks/checkbox-button/checkbox-button.pug
include ../../components/blocks/pagination/pagination.pug

block meta-keywords
  meta(name="keywords" content="TOXIN, hotels, search room")
block meta-description
  meta(name="description" content="Выбор номера в отеле, любой")
block title
  title Search page

block main
  .search-page
    article.search-page__select-options
      h3.search-page__datepicker_title Даты пребывания в отеле
      +calendar("19 авг - 23 авг", "", "#datepicker-single", "single")
      h3.search-page__dropdown_title Гости
      +iqdropdown({arr:["Взрослые", "Дети", "Младенцы"], classForJs:"js-iqdropdown_people"})
      +range-slider
      h3.search-page__checkbox_title checkbox buttons
      +checkbox-button("Можно курить", "")
      +checkbox-button("Можно с питомцами", "checked")
      +checkbox-button("Можно пригласить гостей (до 10 человек)", "checked")
      h3.search-page__checkbox-rich_title доступность
      +checkbox-rich({titlesAndChecked: {
        "Широкий коридор": "checked",
        "Помощник для инвалидов": false
      },
      texts: ["Ширина коридоров в номере не менее 91см",
      "На 1 этаже вас встретит специалист и проводит до номера"
      ]})
      .search-page__dropdown
        h3.search-page__dropdown_title Удобства номера
        +iqdropdown({arr:["Спальни", "Кровати", "Ванные комнаты"], classForJs:"js-iqdropdown_options"})
      .search-page__expendable-checkbox
        +checkbox-expendable({title: "Дополнительные удобства", textsAndChecked: {
          "Завтрак": "checked",
          "Письменный стол": "checked",
          "Стул для кормления": "unchecked",
          "Кроватка": "unchecked"
        }})
    article.search-page__rooms
      h2.search-page_rooms_title Номера, которые мы для вас подобрали
      section.search-page__rooms_numbers
        +hotel-room-card("imgs/room-1.png", 5, "888", "9 990₽", "lux", "145", "./room-detail.html", 4, "eclectica, double bed")
        +hotel-room-card("imgs/room-2.png", 4, "840", "9 900₽", "", "65", "", 4, "eclectica, 4 simle beds")
        +hotel-room-card("imgs/room-3.png", 3, "980", "8 500₽", "lux", "35", "", 4, "double bed")
        +hotel-room-card("imgs/room-4.png", 5, "856", "7 300₽", "lux", "19", "", 4, "double bed")
        +hotel-room-card("imgs/room-5.png", 4, "740", "6 000₽", "", "44", "", 4, "double bed")
        +hotel-room-card("imgs/room-6.png", 3, "982", "5 800₽", "", "56", "", 4, "double bed, big square")
        +hotel-room-card("imgs/room-7.png", 5, "678", "5 500₽", "", "45", "", 4, "double bed, big square")
        +hotel-room-card("imgs/room-8.png", 4, "450", "5 300₽", "", "39", "", 4, "double bed")
        +hotel-room-card("imgs/room-9.png", 3, "350", "5 000₽", "", "77", "", 4, "double bed")
        +hotel-room-card("imgs/room-10.png", 5, "666", "5 000₽", "", "25", "", 4, "two simple beds")
        +hotel-room-card("imgs/room-11.png", 3, "444", "5 000₽", "", "15", "", 4, "two simple double beds")
        +hotel-room-card("imgs/room-12.png", 3, "352", "5 000₽", "", "55", "", 4, "double bed")
      section.search-page__rooms_pagination
        +pagination